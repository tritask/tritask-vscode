{
	"name": "tritask-language-features",
	"displayName": "Tritask command",
	"description": "Tritask commands for .trita files.",
	"publisher": "stakiran",
	"repository": "https://github.com/tritask/tritask-vscode",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.51.0"
	},
	"main": "./out/extension.js",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguages:trita",
		"onLanguages:plaintext",
		"onCommand:tritask.inbox.add",
		"onCommand:tritask.task.add",
		"onCommand:tritask.task.copy",
		"onCommand:tritask.task.start",
		"onCommand:tritask.task.end",
		"onCommand:tritask.task.end.posteriori",
		"onCommand:tritask.task.walk",
		"onCommand:tritask.task.walk.1",
		"onCommand:tritask.task.walk.today",
		"onCommand:tritask.sort",
		"onCommand:tritask.menu.show",
		"onCommand:tritask.jump.today.todo",
		"onCommand:tritask.jump.starting",
		"onCommand:tritask.jump.separator.prev",
		"onCommand:tritask.jump.separator.next",
		"onCommand:tritask.completion.simple",
		"onCommand:tritask.report.dialog"
	],
	"contributes": {
		"commands": [
			{
				"command": "tritask.dummy",
				"title": "================",
				"category": "Tritask"
			},
			{
				"command": "tritask.inbox.add",
				"title": "Add inbox",
				"category": "Tritask"
			},
			{
				"command": "tritask.task.add",
				"title": "Add task",
				"category": "Tritask"
			},
			{
				"command": "tritask.task.copy",
				"title": "Copy task",
				"category": "Tritask"
			},
			{
				"command": "tritask.task.start",
				"title": "Start task",
				"category": "Tritask"
			},
			{
				"command": "tritask.task.end",
				"title": "End task",
				"category": "Tritask"
			},
			{
				"command": "tritask.task.end.posteriori",
				"title": "End task(Posteriori)",
				"category": "Tritask"
			},
			{
				"command": "tritask.task.walk",
				"title": "Walk task",
				"category": "Tritask"
			},
			{
				"command": "tritask.task.walk.1",
				"title": "Walk task to next day",
				"category": "Tritask"
			},
			{
				"command": "tritask.task.walk.today",
				"title": "Walk task to today",
				"category": "Tritask"
			},
			{
				"command": "tritask.sort",
				"title": "Sort",
				"category": "Tritask"
			},
			{
				"command": "tritask.menu.show",
				"title": "Show menu",
				"category": "Tritask"
			},
			{
				"command": "tritask.jump.today.todo",
				"title": "Jump to the top of today todo",
				"category": "Tritask"
			},
			{
				"command": "tritask.jump.starting",
				"title": "Jump to starting task",
				"category": "Tritask"
			},
			{
				"command": "tritask.jump.separator.next",
				"title": "Jump to next separator",
				"category": "Tritask"
			},
			{
				"command": "tritask.jump.separator.prev",
				"title": "Jump to previous separator",
				"category": "Tritask"
			},
			{
				"command": "tritask.completion.simple",
				"title": "Completion date",
				"category": "Tritask"
			},
			{
				"command": "tritask.report.dialog",
				"title": "Report today",
				"category": "Tritask"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "tritask.dummy",
					"when": "resourceExtname == .DO_NOT_SHOW"
				},
				{
					"command": "tritask.inbox.add",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.task.add",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.task.copy",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.task.start",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.task.end",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.task.end.posteriori",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.task.walk",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.task.walk.1",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.task.walk.today",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.sort",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.menu.show",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.jump.today.todo",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.jump.starting",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.jump.separator.next",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.jump.separator.prev",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.completion.simple",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.report.dialog",
					"when": "resourceExtname == .trita"
				}
			],
			"editor/context": [
				{
					"command": "tritask.dummy",
					"group": "navigation@10",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.dummy",
					"group": "navigation@20",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.dummy",
					"group": "navigation@30",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.inbox.add",
					"group": "navigation@2",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.task.add",
					"group": "navigation@1",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.task.copy",
