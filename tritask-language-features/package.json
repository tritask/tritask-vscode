					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.task.walk.1",
					"group": "navigation@12",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.task.walk.today",
					"group": "navigation@13",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.sort",
					"group": "navigation@21",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.jump.today.todo",
					"group": "navigation@22",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.jump.starting",
