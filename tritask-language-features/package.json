					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.jump.separator.prev",
					"group": "navigation@23",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.jump.separator.next",
					"group": "navigation@24",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.completion.simple",
					"group": "navigation@25",
					"when": "resourceExtname == .trita"
				},
				{
					"command": "tritask.report.dialog",
					"group": "navigation@31",
					"when": "resourceExtname == .trita"
				}
			]
		},
		"keybindings": [
			{
				"command": "tritask.menu.show",
				"key": "alt+m",
				"mac": "ctrl+m",
				"when": "resourceExtname == .trita"
			},
			{
				"command": "tritask.sort",
				"key": "alt+z",
				"mac": "ctrl+z",
				"when": "resourceExtname == .trita"
			},
			{
				"command": "tritask.jump.today.todo",
				"key": "alt+k",
				"mac": "ctrl+k",
				"when": "resourceExtname == .trita"
			},
			{
				"command": "tritask.jump.starting",
				"key": "alt+j",
				"mac": "ctrl+j",
				"when": "resourceExtname == .trita"
			},
			{
