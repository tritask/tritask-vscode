// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "debug run",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "lint",
			"type": "npm",
			"script": "lint",
			"isBackground": true,
		},
		{
			"label": "lint and build",
			"dependsOn": ["lint", "debug run"]
		},
	]
}
